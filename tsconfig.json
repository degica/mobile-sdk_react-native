{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@services/*": [
        "./src/services/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@util/*": [
        "./src/util/*"
      ],
      "@context/*": [
        "./src/context/*"
      ]
    }
  },
  "include": [
    "src",
    "assets.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "dist"
  ]
}