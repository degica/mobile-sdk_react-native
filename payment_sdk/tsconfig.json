{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@util/*": [
        "util/*"
      ],
      "@context/*": [
        "context/*"
      ]
    }
  },
  "include": [
    "src",
    "assets.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "__tests__",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}